<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.loh.billme_final_android.Activity_group_invite"
    android:id="@+id/group_invite_layout">

    <com.victor.loading.newton.NewtonCradleLoading
        android:id="@+id/group_invite_newton_cradle_loading"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:background="@color/logo_green"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/group_invite_text_layout"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Group name"
            android:id="@+id/group_invite_group_name"
            android:textColor="@color/logo_green"/>
    </android.support.design.widget.TextInputLayout>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/group_invite_list"
            android:layout_below="@+id/group_invite_text_layout"
            android:layout_alignParentStart="true" />



</RelativeLayout>
