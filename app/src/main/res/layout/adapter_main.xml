<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_green"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_profile"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:scaleType="centerCrop"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/white"
        android:layout_margin="4dp"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="4"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/main_from_user"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/logo_green"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:text="From : Lawrence"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/main_toGroup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/logo_green"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:text="To : Apu house"/>

        <TextView
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/logo_green"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:text="Title : Times Wifi"/>

        <TextView
            android:id="@+id/main_amount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/logo_green"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:text="Total : "/>

        <TextView
            android:id="@+id/main_date_from"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/logo_green"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:text="From : 12/12/2015"/>


        <TextView
            android:id="@+id/main_date_to"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/logo_green"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:text="To : 1/1/2015"/>

        <TextView
            android:id="@+id/main_personal_amount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/logo_green"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:text="You need to pay RM"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>



</LinearLayout>