<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/green_back"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/AppTheme" android:orientation="vertical"
    android:gravity="bottom"

    >

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content_profile_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:civ_border_width="5dp"
        app:civ_border_color="@color/white_green"
        android:layout_weight="5"
        />
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/content_fullname"
        android:layout_weight="1"
        android:textSize="15sp"
        android:textColor="@color/white"
        />
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
       android:text="xin08289@gmail.com"
        android:id="@+id/content_email"
        android:layout_weight="1"
        android:textSize="15sp"
        android:textColor="@color/white"
        />


</LinearLayout>
